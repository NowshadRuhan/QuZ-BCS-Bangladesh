<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="20dp" android:color="#240877" />
            <gradient android:angle="90" android:startColor="#240877" android:endColor="#240877"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20sp" />
            <stroke android:width="20sp" android:color="#240877" />
            <solid android:color="#240877"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="28dp" />
            <stroke android:width="1dip" android:color="#240877" />
            <gradient android:angle="90" android:startColor="#240877" android:endColor="#240877" />
        </shape>
    </item>
</selector>