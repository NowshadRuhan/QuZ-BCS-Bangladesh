<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="20dp" android:color="#097e00" />
            <gradient android:angle="90" android:startColor="#116300" android:endColor="#006b07"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20sp" />
            <stroke android:width="20sp" android:color="#007309" />
            <solid android:color="#028900"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="28dp" />
            <stroke android:width="1dip" android:color="#007102" />
            <gradient android:angle="90" android:startColor="#0c7c00" android:endColor="#086002" />
        </shape>
    </item>
</selector>